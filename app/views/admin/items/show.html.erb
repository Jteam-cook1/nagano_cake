<div class="container">
  <div class="row">

    <div class="col-4 mt-5 pt-5">
      <h4>商品詳細</h4>
      <% if @item.image.attached? %>
        <%= image_tag @item.image, size: "300x300" %>
      <% else %>
        <%= image_tag 'no_image', size: "300x300" %>
      <% end %>
    </div>
    <div class="col-4 mt-5 pt-5">
      <table class="table table-borderless">
        <tr>
          <th>商品名</th>
          <td><%= @item.name %></td>
        </tr>
      </table>

      <table class="table table-borderless mt-3">
        <tr>
          <th>商品説明</th>
          <td><%= @item.description %></td>
        </tr>
      </table>

      <table class="table table-borderless mt-3">
        <tr>
          <th>ジャンル</th>
          <td><%= @item.genre.name %></td>
        </tr>
      </table>

      <table class="table table-borderless mt-3">
        <tr>
          <th>税込価格</th>
          <td><%= @item.add_tax_price.to_s(:delimited) %></td>
        </tr>
      </table>

      <table class="table table-borderless mt-3">
        <tr>
          <th>販売ステータス</th>
          <td><%= @item.is_active ? '販売中' : '販売停止中' %></td>
        </tr>
      </table>

      <%= link_to "編集する", edit_admin_item_path(@item.id),class:"btn btn-success createbook mt-5" %>
    </div>
  </div>
</div>