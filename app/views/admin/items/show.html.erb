<div class="container">
  <div class="row">

    <div class="col-4 mt-5 pt-5">
      <h4>商品詳細</h4>
      <% if @item.image.attached? %>
        <%= image_tag @item.image, size: "300x300" %>
      <% else %>
        <%= image_tag 'no_image', size: "300x300" %>
      <% end %>
    </div>
    <div class="col-4 mt-5 pt-5">
      <table class="table table-borderless">
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.description %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>税込価格</td>
          <td><%= @item.add_tax_price.to_s(:delimited) %></td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td>
           <% if @item.is_active %>
           <p style="color: lime;">販売中</p>
           <% else %>
           <p style="color: #dcdcdc">販売停止中</p>
           <% end %>
        </tr>
      </table>

      <%= link_to "編集する", edit_admin_item_path(@item.id),class:"btn btn-outline-danger mt-5" %>
    </div>
  </div>
</div>