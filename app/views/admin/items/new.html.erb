<div class="container ">
 <div class="row">
   <div class="col-sm-12">
   <p><span class="bg-lights">
   商品新規登録
   </span>


   <%= form_with model: @item,url: admin_items_path(@item.id) do |f| %>
   <table class="table table-borderless">
    <tr>
     <td>画像</td>
     　<td><%= f.file_field :image, accept: "image/*", class: "form-control-file" %></td>
    </tr>
    <tr>
  　<td>商品名</td>
   　　<td><%= f.text_field :name,class:"form-control col-xs-3 name",style:"width:300px" %></td>
   　</tr>
   　<tr>
   　<td>商品説明</td>
   　　<td><%= f.text_area :description,class:"form-control description",style:"width:300px" %></td>
    </tr>
    <tr>
  　<td>ジャンル</td>
  　　 <td><%= f.collection_select :genre_id, Genre.all, :id, :name,{},{class:"form-control genre_i",style:"width:300px"} %></td>
    </tr>
    <tr>
     <td>税抜価格</td>
      <td><%= f.text_field   :price,class:"form-control price",style:"width:300px" %></td>
    </tr>
     <tr>
     <td>販売ステータス</td>
     <td>
     <%= f.radio_button :is_active, true %>
     <%= f.label :is_active, "販売中" %>
     <%= f.radio_button :is_active, false %>
     <%= f.label :is_active, "販売停止中" %>
     </td>
    </tr>
   </table>

   <div>
    <%= f.submit "新規登録",class:"btn btn-success createbook" %>
   </div>

   <% end %>
   </div>
 </div>
</div>　　　　