<div class="container  px-8 px-sm-8">



<p><span class="bg-light" style="margin-right: 73%">
商品一覧
</span>
<%= link_to "新規登録", new_admin_item_path,class:"btn btn-outline-danger" %>

<table class="table ">
<thead class="thead-light">
<tr>
<th>商品ID</th>
<th>商品名</th>
<th>税抜価格</th>
<th>ジャンル</th>
<th>ステータス</th>
</tr>
</thead>


<tbody>
<% @items.each do |item| %>
<tr>
 <th><%= item.id %></th>

 <th><%= link_to item.name, admin_item_path(item.id)  %></th>

 <th><%= item.price %></th>

 <th><%= item.genre.name %></th>

 <th><% if item.is_active %>
 <p style="color: lime;">販売中</p>
 <% else %>
 <p style="color: #dcdcdc">販売停止中</p>
 <% end %>
 </th>

</tr>
<% end %>

</tbody>

</table>

 <%= paginate  @items %>



</div>
 </div>
</div>