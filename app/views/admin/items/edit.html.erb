<div class="container ">
 <div class="row">
   <div class="col-sm-12">
   <p><span class="bg-lights">
   商品編集
   </span>
  
<%= form_with model: @item,url: admin_item_path(@item.id),local:true do |f| %>


   <table class="table table-borderless">
   <tr>
   <th>画像</th>
   <td><%= f.file_field :image, accept: "image/*", class: "form-control-file" %></td>
    </tr>
   </table>
   
   <table class="table table-borderless">
   <tr>
   <th>商品名</th>
   <td><%= f.text_field :name,class:"form-control name" %></td>
   </tr>
   </table>
   
   <table class="table table-borderless">
   <tr>
   <th>商品説明</th>
   <td><%= f.text_area :description,class:"form-control description" %></td>
   </tr>
   </table>
   
   <table class="table table-borderless">
   <tr>
   <th>ジャンル</th>
   <td><%= f.collection_select :genre_id, Genre.all, :id, :name,class:"form-control genre_id" %></td>
   </tr>
   </table>
   
  <table class="table table-borderless">
   <tr>
   <th>税抜価格</th>
   <td><%= f.text_field   :price,class:"form-control price" %></td>
   </tr>
   </table>
   
   <table class="table table-borderless">
   <tr>
   <th>販売ステータス</th>
   <td>
   <%= f.radio_button :is_active, true %>
   <%= f.label :is_active, "販売中" %>
   <%= f.radio_button :is_active, false %>
   <%= f.label :is_active, "販売停止中" %>
   </td>
    </tr>
   </table>
   
   
   <div>
   <%= f.submit '変更を保存',class:"btn btn-outline-danger" %>
   </div>
<% end %>
 </div>
 </div>
</div>