<div class="container  px-8 px-sm-8">
 <div class="row">
   <div class="col-md-5">
<h1>商品編集</h1>

<%= form_with model: @item,url: admin_item_path(@item.id),local:true do |f| %>

   <h4>画像</h4>
   <%= f.file_field :image, accept: "image/*" %>
   <h4>商品名</h4>
   <%= f.text_field :name,class:"form-control name" %>
   <h4>商品説明</h4>
   <%= f.text_area :description,class:"form-control description" %>
   <h4>ジャンル</h4>
   <%= f.collection_select :genre_id, Genre.all, :id, :name,class:"form-control genre_id" %>
   <h4>税抜価格</h4>
   <%= f.text_field   :price,class:"form-control price" %>
   <h4>販売ステータス</h4>
   <%= f.radio_button :is_active, true %>
   <%= f.label :is_active, "販売中" %>
   <%= f.radio_button :is_active, false %>
   <%= f.label :is_active, "販売停止中" %>
   
   <div>
   <%= f.submit '変更を保存',class:"btn btn-success createbook" %>
   </div>
<% end %>
 </div>
 </div>
</div>