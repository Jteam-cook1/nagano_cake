



<div class="row">
	  <div class="offset-sm-4 col-sm-4">
	    <table class="table table-borderless table-hover">
	      <h1>???さんの会員詳細</h1><br/>
	      <tr class="brown-border">
	        <td>会員ID</td>
	        <td>
	          <%= @customer.id %>
	        </td>
	      </tr>
	      <tr class="brown-border">
		    	<td>氏名</td>
		    	<td>
		    		<%= @customer.last_name %>
		    		<!--%= @customer.first_name %>-->
		    	</td>
	      </tr>

	      <tr class="brown-border">
		    	<td>フリガナ</td>
		    	<td>
		    		<%= @customer.last_name_kana %>
		    		<!--%= @customer.first_name_kana %>-->
	    		</td>
	      </tr>

	      <tr class="brown-border">
		    	<td>郵便番号</td>
		    	<td><%= @customer.postcode %></td>
	      </tr>

	      <tr class="brown-border">
		    	<td>住所</td>
		    	<td><%= @customer.address %></td>
	      </tr>

	      <tr class="brown-border">
		    	<td>電話番号</td>
		    	<td><%= @customer.phone_number %></td>
	      </tr>

	      <tr class="brown-border">
	    		<td>メールアドレス</td>
	        <td><%= @customer.email %></td>
	      </tr>


        <tr class="brown-border">
          <td>会員ステータス</td>
	       <th><% if @customer.is_active %>
          <p style="color: lime;">有効</p>
          <% else %>
          <p style="color: #dcdcdc">退会</p>
          <% end %>
         </th>
        </tr>

        <tr class="brown-border">
          <td>
		    <%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-outline-danger mx-auto my-1" %>&emsp;
		    <%= link_to "注文履歴一覧を見る", admin_path, class: "btn btn-outline-danger mx-auto my-1" %>
		      </td>
		    </tr>


	    </table>
