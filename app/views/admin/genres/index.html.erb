<% if @genre.errors.any? %>
  <%= @genre.errors.count %>件のエラーが発生しました
  <ul>
    <% @genre.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="container  px-6 px-sm-6">
 <div class="row">
   <div class="col-md-5">
<div class="p-3 mb-2 bg-light text-dark">ジャンル一覧・追加</div>

 <%= form_with model: @genre,url: admin_genres_path do |f| %>
  <tr>
  <td> 
  ジャンル名
  </td>
  <td>
  <%= f.text_field :name %>
  </td>
  <td>
  <%= f.submit '新規登録',class:"btn btn-outline-danger" %>
  </td>
  </tr>
  <% end %>
  <tr>
<table class="table ">
   <thead class="thead-light">
    <tr>
      <th>ジャンル</th>
    </tr>
  </thead>
  <tbody>
   <% @genres.each do |genre| %>
   
    <tr>
     <th><%= genre.name %></th>
     <th><%= link_to "編集する", edit_admin_genre_path(genre.id),class:"btn btn-outline-danger" %></th>
    </tr>
   <% end %>
  </tbody>
</table>
  
</div>
</div>
</div>
</div>

