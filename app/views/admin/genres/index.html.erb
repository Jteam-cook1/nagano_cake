<div class="container  px-8 px-sm-8">
<tr>
<div class="p-3 mb-2 bg-light text-dark">ジャンル一覧・追加</div>

 <%= form_with model: @genre,url: admin_genres_path do |f| %>
  ジャンル名
  <%= f.text_field :name %>
  <%= f.submit '新規登録',class:"btn btn-success createbook" %>
  <% end %>
  <tr>
<table class="table ">
   <thead class="thead-light">
    <tr>
      <th>ジャンル</th>
    </tr>
  </thead>
  <tbody>
   <% @genres.each do |genre| %>
   
    <tr>
    <th><%= genre.name %></th>
    <th><%= link_to "編集する", edit_admin_genre_path(genre.id),class:"btn btn-success createbook" %></th>
    </tr>
   <% end %>
  </tbody>
</table>
  
</div>
