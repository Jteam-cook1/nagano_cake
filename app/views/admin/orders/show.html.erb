<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h2>注文履歴詳細</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <table class="table">
        <tbody>
          <tr>
            <td>購入者</td>
            <td><%= @order.customer.last_name + @order.customer.first_name %></td>
          </tr>
          <tr>
            <td>注文日</td>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <td>配送先</td>
            <td>〒<%= @order.postcode %><br><%= @order.address %><br>
            <%= @order.name %>
            </td>
          </tr>
          <tr>
            <td>支払方法</td>
            <td><%= @order.payment_method %></td>
          </tr>
          <tr>
            <td>注文ステータス</td>
            <td>
              <%= form_with model: @order, url: admin_order_path(@order), method: :patch, local: true do |f| %>
                <%= f.select :status, Order.statuses.keys, class: "order_status" %>
                <%= f.submit "更新", class: "btn btn-outline-success" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h4>注文内容</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <table class="table">
        <thead>
          <tr>
            <th>商品</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
            <th>制作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
          <tr>
            <td>
              <%= order_detail.item.name %>
            </td>
            <td>
              <%= order_detail.item.with_tax_price %>
            </td>
            <td>
              <%= order_detail.amount %>
            </td>
            <td>
              <%= order_detail.subtotal %>
            </td>
            <td>
              <%= form_with model: order_detail, url: admin_order_detail_path(order_detail), method: :patch, local: true do |f| %>
                <%= f.select :status, OrderDetail.statuses.keys, class: "order_detail_status" %>
                <%= f.submit "更新", class: "btn btn-outline-success" %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      </div>
      <div class="row">
      <div class="col-md-12 offset-md-8">
        <h4>請求情報</h4>
      </div>
      </div>
        <div class="row">
        <div class="col-md-12 align-self-end offset-md-7">
        <table class="table table-bordered">
        <tbody>
          <tr>
            <td>商品合計</td>
            <td><%= @total %></td>
          </tr>
          <tr>
            <td>送料</td>
            <td><%= @order.shipping_fee %></td>
          </tr>
          <tr>
            <td>請求金額合計</td>
            <td><%= @total + @order.shipping_fee %></td>
          </tr>
        </tbody>
      </table>
      </div>
      </div>
    </div>
  </div>
</div>
