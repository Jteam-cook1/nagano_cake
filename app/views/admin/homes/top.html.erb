<div class="continer">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h2>注文履歴一覧</h2>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-12">
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
          <th colspan="4"></th>
        </tr>
      </thead>
      <% @orders.each do |order| %>
      <tbody>
        <tr>
          <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(order.id)  %></td>
          <td><%= order.customer.last_name + order.customer.first_name %></td>
          <td><% @order_amount = 0 %>
              <% order.order_details.each do |order_detail| %>

                <% @order_amount += order_detail.amount %>
              <% end %>
              <%= @order_amount %>
          </td>
          <td><%= order.status %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @orders %>
  </div>

</div>
