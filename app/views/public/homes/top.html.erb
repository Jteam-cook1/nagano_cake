<div class="container  px-8 px-sm-8">
<table style="border-color:#000000 ; border-style:solid ; border-width:1px ;">
<tr><th>
 <% @genres.each do |genre| %>
 
 <%= link_to genre.name,root_path(genre_id: genre.id) %>
 <% end %>
  </th></tr>
</table>

 


<h4><%= @title %></h4>


<table>
<tbody>
<% @items.each do |item| %>
<th>
 <div class="p-2">
<% if item.image.attached? %>
<%= image_tag item.image, size: "100x100" %>
<% else %>
<%= image_tag 'no_image', size: "100x100" %>
<% end %>
</div>
<div class="p-2">
<%= link_to item.name, item_path(item.id)  %>
</div>
<div class="p-2">
<%= item.price %>
</div>
</th>
<% end %>
</tbody>
</table>
<%= paginate  @items %>
</div>