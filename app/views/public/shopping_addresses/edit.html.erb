<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h2>配送先編集</h2>
    </div>
  </div>

  <% if @shopping_address.errors.any? %>
    <%= @shopping_address.errors.count %>件のエラーが発生しました
    <ul>
      <% @shopping_address.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>


  <%= form_with model: @shopping_address,url: shopping_address_path(@shopping_address.id),local:true  do |f| %>

  <div class="row">
    <div class="col-10">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th><%= f.label :postcode, "郵便番号(ハイフンなし)" %></th>
            <td><%= f.text_field :postcode, placeholder: "0000000" %></td>
          </tr>
          <tr>
            <div class="form-group">
            <th><%= f.label :address, "住所" %></th>
            <td><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class:"form-control" %></td>
            </div>
          </tr>
          <tr>
            <th><%= f.label :name, "宛名" %></th>
            <td><%= f.text_field :name, placeholder: "令和道子" %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-2 mt-auto">
      <%= f.submit "変更内容を保存", class:"btn btn-sm btn-success" %>
    </div>
  </div>
  <% end %>
</div>
