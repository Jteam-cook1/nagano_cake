<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h2>注文履歴詳細</h2>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <h4>注文情報</h4>
        <table class="table table-bordered">
          <tbody>
            <tr>
              <td>注文日</td>
              <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
            </tr>
            <tr>
              <td>配送先</td>
              <td>〒<%= @order.postcode %><%= @order.address %><br>
              <%= @order.name %>
              </td>
            </tr>
            <tr>
              <td>支払方法</td>
              <td><%= @order.payment_method_i18n %></td>
            </tr>
            <tr>
              <td>ステータス</td>
              <td><%= @order.order_status %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
