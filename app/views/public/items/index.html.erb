<div class="container  px-8 px-sm-8">
  <div class="row">
   <div class="col-2 mt-4 pt-4">
     <div style="border: double;">
       <div style="text-align: center">
　       <p>ジャンル検索</p>
　      </div>
        <% @genres.each do |genre| %>
        <div style="text-align: center">
         <p><%= link_to genre.name,items_path(genre_id: genre.id)%></p>
        </div>
      <% end %>
     </div>
   </div>
   
   
 <div class="col-6 mt-4 pt-4 offset-md-1">
  <h4><%= @title %>一覧</h4>

    <div class="d-flex flex-wrap">
     <% @items.each do |item| %>
      <div>
        <div class="p-2">
          <% if item.image.attached? %>
          <%= link_to item_path(item.id) do %>
          <%= image_tag item.image ,size: "100x100" %>
          <% end %>
          <% else %>
          <%= link_to item_path(item.id) do %>
          <%= image_tag 'no_image', size: "100x100" %>
          <% end %>
          <% end %>
        </div>
      <div class="p-2">
       <%= link_to item.name, item_path(item.id)  %>
      </div>
      <div class="p-2">
        ￥<%= item.price %>
      </div>
      </div>
      <% end %>

</div>
 <ul class="pagination">
 <%= paginate  @items  %>
</ul>
</div>